<% include ../partials/header%>
<div class="container">
     <div class="row">
          <h2 style="text-align: center; margin-top:2em">New campground</h2>
          <div style="width: 50%; margin: 25px auto;" class="container">
               <form action="/campgrounds" method="POST">
                    <div class="form-group">
                         <input class="form-control" type="text" name="name" placeholder="campground name">
                    </div>
                    <div class="form-group">
                         <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                         <input class="form-control"  type="text" name="image" placeholder="url">
                    </div>
                    <div class="form-group">
                         <input class="form-control"  type="text" name="description" placeholder="description">
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-lg btn-primary"> Submit</button>  
                    </div>
               </form>
          </div>
     <div class="goback">
          <a href="/campgrounds"><img src="../images/goback.jpg" width="40">
          <h3>Go back</h3></a>
     </div>

     </div>
     

</div>


<% include ../partials/footer%>